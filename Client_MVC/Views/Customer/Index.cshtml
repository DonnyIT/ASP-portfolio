@model IEnumerable<Client_MVC.Models.Customer>

@{
    ViewData["Title"] = "Customers List";
}

<h2>Customer List</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Add New Customer</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Details", new { id = customer.Id })">Details</a> |
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = customer.Id })">Edit</a> |
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = customer.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
